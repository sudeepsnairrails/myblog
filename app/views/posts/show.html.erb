<header class="intro-header" style="background-image: url('img/post-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1><%= @post.title%></h1>
                        <span class="meta"><%= link_to "Edit", edit_post_path(@post) %>|
<%= link_to "Delete", post_path(@post), :method => :delete, data: {confirm: "Are you sure you want to delete this post?"} %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <p>
                    	<%= @post.body%>

</p>
                    	<hr>
                    	<h4>---------Comments------------</h4>
                    	<%= render @post.comments.order("created_at DESC") %>
                    	<hr>
                    
                </div>
            </div>
           </div>
       </article>

<div class="lightbg">
<div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            	<h2>---------Leave a comment------------</h2>
                <%= form_for [@post, @post.comments.build] do |f| %>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">

                            <%= f.label :Name%>
                            <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
                        </div>
                    </div>
                    
                    
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :Comment%>
                            <%= f.text_area :body, class: "form-control", placeholder: "Comment"%>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                        	<%= f.submit class: "btn btn-default" %>
                            
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>





	